[Unit]
Description=Note App Backend (Rust/Axum)
After=network.target

[Service]
Type=simple
User=www-data
Group=www-data
WorkingDirectory=/opt/note-app
ExecStart=/opt/note-app/backend
EnvironmentFile=/opt/note-app/.env
Restart=always
RestartSec=5
StandardOutput=journal
StandardError=journal

# 安全性設定
NoNewPrivileges=true
ProtectSystem=strict
ProtectHome=true
ReadWritePaths=/opt/note-app

[Install]
WantedBy=multi-user.target
